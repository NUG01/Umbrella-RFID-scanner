<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/antennaSelectionLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minWidth="300dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/antennaSelectionTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_dialog_antenna_selection"
        android:gravity="center"
        android:textSize="@dimen/settings_list_text_size"
        android:padding="@dimen/activity_horizontal_margin"
        android:textStyle="bold"
        android:background="@android:color/darker_gray"/>



    <com.google.android.material.button.MaterialButton
        android:id="@+id/applyButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/apply_button_text"
        android:layout_marginHorizontal="@dimen/list_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_horizontal_margin" />

</LinearLayout>